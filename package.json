{
  "name": "containerize-push-action",
  "version": "1.0.0",
  "description": "Docker's build-and-push-action subset, or equivalent for containerizing Bentos",
  "main": "lib/main.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:bentoml/containerize-and-push-action.git"
  },
  "author": "BentoML Team",
  "scripts": {
    "build": "ncc build src/main.ts --source-map --minify --license licenses.txt",
    "lint": "eslint src/**/*.ts",
    "format": "eslint --fix src/**/*.ts",
    "all": "pnpm run build && pnpm run format && pnpm run lint"
  },
  "contributors": [
    {
      "name": "Aaron Pham",
      "url": "https://aarnphm.xyz"
    }
  ],
  "keywords": [
    "actions",
    "docker",
    "bentoml",
    "containerize",
    "push"
  ],
  "license": "Apache-2.0",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/exec": "^1.1.1",
    "@docker/actions-toolkit": "^0.16.0",
    "handlebars": "^4.7.8"
  },
  "devDependencies": {
    "@types/csv-parse": "^1.2.2",
    "@types/node": "^16.18.21",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "@vercel/ncc": "^0.36.1",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "prettier": "^2.8.7",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  }
